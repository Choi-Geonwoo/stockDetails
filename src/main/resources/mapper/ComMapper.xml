<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.spring.mapper.ComMapper">
<select id = "sectionSelect"  resultType="Map" parameterType="Map">
        SELECT          /* ComMapper.sectionSelect */
                        NO,         /*순번*/
                        SECTION_CD, /*대분류코드*/
                        SECTION_NM, /*대분류명*/
                        USE_YN,     /*사용여부*/
                        REG_YMD     /*등록일자*/
                FROM
                        SECTION
                where 1=1
                <if test='SECTION_NM != null and SECTION_NM != "" '>
                        AND SECTION_NM = #{SECTION_NM}
                </if>
                        order by NO desc
</select>
</mapper>