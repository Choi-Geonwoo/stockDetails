<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.spring.mapper.FileMapper">

<insert id="fileInsert" parameterType="com.springboot.spring.dto.FileDTO" >
        INSERT INTO TB_FILE
        (
            NO, 
            F_NAME, 
            T_NO, 
            CONTENTS
            )
        VALUES(
            (select max(no)+1 from TB_FILE), 
            #{fName}, 
            #{tNo}, 
            #{contents}
            )

</insert>


<!-- 이미지 상세보기-->
<select id = "imgFileList"  resultType="com.springboot.spring.dto.FileDTO" parameterType="String" >
    SELECT  NO, 
            F_NAME, 
            T_NO, 
            CONTENTS
        FROM TB_FILE
            where T_NO = #{tNo}
</select>

</mapper>